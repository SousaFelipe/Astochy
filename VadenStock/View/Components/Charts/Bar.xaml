<UserControl x:Class="VadenStock.View.Components.Charts.Bar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VadenStock.View.Components.Charts"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=local:Bar}"
             d:DesignHeight="6"
             d:DesignWidth="100">

    <Border x:Name="_BorderContent"
            CornerRadius="{Binding BorderRadius, ElementName=root}"
            VerticalAlignment="Stretch"
            HorizontalAlignment="Stretch"
            Background="{Binding BackColor, ElementName=root}">

        <Border x:Name="_Bar"
                CornerRadius="{Binding BorderRadius, ElementName=root}"
                Width="{Binding CurrentWidth, ElementName=root}"
                Height="{Binding CurrentHeight, ElementName=root}"
                Background="{Binding BarColor, ElementName=root}"/>

    </Border>
    
</UserControl>
